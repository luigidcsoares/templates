%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%%%%%%%%%%%%%%%%%%%%%%%%%% Custom Colors %%%%%%%%%%%%%%%%%%%%%%%%%
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\definecolor{highlight}{HTML}{B23525}
\definecolor{background}{HTML}{FFFFFF}
\definecolor{footmid}{HTML}{DA422F}
\definecolor{footleft}{HTML}{B23525}
\definecolor{footright}{HTML}{B23525}
\definecolor{item}{HTML}{B23525}
\definecolor{blocktitle}{HTML}{7B4B33}
% \definecolor{blockbody}{HTML}{3B3B50}
\colorlet{blockbody}{background}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%%%%%%%%%%%%%%%%%%%%%%%%%%%% Settings %%%%%%%%%%%%%%%%%%%%%%%%%%%%
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamercolor*{title page header}{fg=black}
\setbeamercolor*{footline author}{fg=white}
\setbeamercolor*{footline title}{fg=white}
\setbeamercolor*{footline date and page}{fg=white}
\setbeamercolor*{date}{fg=white}
\setbeamercolor*{normal text}{fg=black}
%%% Define color for the alerted text. By default, it is the same
%%% as normal text but in bold (see beamerfont file)
\setbeamercolor*{alerted text}{fg=black}
\setbeamercolor*{qed symbol}{bg=black}
%%% Define subitem and subsubitems with the same color as items.
%%% One can change that by specifying other fg and bg colors.
\setbeamercolor*{item projected}{bg=item, fg=white}
\setbeamercolor*{itemize item}{fg=item}
\setbeamercolor*{enumerate item}{fg=item}
\setbeamercolor*{itemize subitem}{parent=itemize item}
\setbeamercolor*{itemize subsubitem}{parent=itemize item}
\setbeamercolor*{enumerate subitem}{parent=itemize item}
\setbeamercolor*{enumerate subsubitem}{parent=itemize item}
%%% Define alerted and example blocks with the same color as
%%% normal blocks. One can change that by specifying other fg
%%% and bg colors.
\setbeamercolor*{block title}{fg=white, bg=blocktitle}
\setbeamercolor*{block body}{fg=black, bg=blockbody}
\setbeamercolor*{block title example}{parent=block title}
\setbeamercolor*{block title alerted}{parent=block title}
\setbeamercolor*{block body example}{parent=block body}
\setbeamercolor*{block body alerted}{parent=block body}
%%% Bibliography colors.
\setbeamercolor*{bibliography entry title}{fg=black}
\setbeamercolor*{bibliography entry author}{fg=black}
\setbeamercolor*{bibliography entry location}{fg=black}
\setbeamercolor*{bibliography entry note}{fg=black}

\mode
<all>
